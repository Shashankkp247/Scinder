Screen:
	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height
		padding: 20

		rows: 2

		Label:
			id: Q
			text: 'Question'

		GridLayout:
			cols: 2
			rows: 2

			spacing: 30

			Button:
				id: 0
				size_hint: (.2, .2)
				text: 'Option A'
				on_press: app.pressed(0)

			Button:
				id: 1
				size_hint: (.2, .2)
				text: 'Option B'
				on_press: app.pressed(1)

			Button:
				id: 2
				size_hint: (.2, .2)
				text: 'Option C'
				on_press: app.pressed(2)

			Button:
				id: 3
				size_hint: (.2, .2)
				text: 'Option D'
				on_press: app.pressed(3)

		FloatLayout:
			cols: 2
			padding: 2
			spacing: 2

			Button:
				id: nex
				size_hint: (.2, .2)
				pos_hint: {'x': .2, 'y': .2}
				text: 'Next'
				on_press: app.state_check()

			Button:
				id: ex
				size_hint: (.2, .2)
				pos_hint: {'x': .6, 'y': .2}
				text: 'Exit'
				on_press: app.close()

		BoxLayout:
			Label: 
				text: 'Developed by SKP\ndedicated to paavel'
				bold: True
				pos_hint: {'x': .5}
				halign: 'center'
				valign: 'middle'



<Button>
	bold: True
	background_normal: ''
	background_color: (135/255, 107/255, 105/255, 1)